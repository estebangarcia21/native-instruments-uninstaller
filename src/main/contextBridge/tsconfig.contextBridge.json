{
  "compilerOptions": {
    "target": "ES2018",
    "module": "AMD",
    "lib": ["es5"],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "libs"
  },
  "exclude": ["**/*.spec.ts"]
}
