{
  "compilerOptions": {
    "target": "ES2018",
    "module": "AMD",
    "lib": ["es5"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "paths": {
      "~contextBridge": ["./"]
    }
  },
  "include": ["libs"],
  "exclude": ["**/*.spec.ts"]
}
